<div class="container my_form">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<h1 class="text-center login-title">Forgot your password?</h1>
			<p>Don't have a MyIdea Account? Please <%= link_to new_user_registration_path do %>Sign up<% end %>.</p>
			<%= form_for(resource, :class=>"form-signin", as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

				<%= f.email_field :email,:class=>'form-control',:required=>true, :autofocus => true, :placeholder => 'Email address' %><br/>
				<%= f.submit "Send me reset password instructions",:class=>'btn btn-lg btn-primary btn-block' %><br/>
			<% end %>
		</div>
	</div>
</div>