
<div class="container my_form">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<h1 class="text-center login-title">Sign in</h1>
			<p>Don't have a MyIdea Account? Please <%= link_to new_user_registration_path do %>Sign up<% end %>.</p>
			<%= form_for(resource, :class=>"form-signin", as: resource_name, url: session_path(resource_name)) do |f| %>

				<%= f.email_field :email,:class=>'form-control',:required=>true, :autofocus => true, :placeholder => 'Email address' %><br/>
				<%= f.password_field :password,:class=>'form-control',:required=>true, :placeholder => 'Password' %><br/>
				<% if devise_mapping.rememberable? -%>
    				<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  				<% end -%>

				<%= f.submit "Sign in",:class=>'btn btn-lg btn-primary btn-block' %><br/>
			<% end %>
			<%= link_to "Forgot your password?", new_user_password_path %><br/>&nbsp	
		</div>
	</div>
</div>